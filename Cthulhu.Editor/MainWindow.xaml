<Window x:Class="Cthulhu.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cthulhu.Editor"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="World Editor of Cthulhu" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ToolBarTray Grid.Row="0">
            <ToolBar HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top">
                <Button Name="refreshButton" Content="Refresh" VerticalAlignment="Top" Click="RefreshButton_Click"/>
                <ComboBox Name="worldComboBox" SelectionChanged="WorldComboBox_SelectionChanged" />
            </ToolBar>
        </ToolBarTray>
        <Canvas Name="worldCanvas" Grid.Row="1" />
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="statusBarText" Text="Status!" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
